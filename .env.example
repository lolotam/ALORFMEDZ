# Environment Configuration Example
# Copy this file to .env and update with your values
#
# SECURITY WARNING: Never commit the .env file to version control!
# Add .env to your .gitignore file

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment (development, production, testing)
FLASK_ENV=production
FLASK_DEBUG=False
PORT=5045

# Security - CRITICAL: MUST CHANGE IN PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=generate-a-strong-random-key-here-use-python-secrets-module

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================

# Session Storage Type (filesystem, redis, memcached, etc.)
SESSION_TYPE=filesystem
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=86400  # 24 hours in seconds

# Session Security
SESSION_USE_SIGNER=True
SESSION_KEY_PREFIX=pharmacy:
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# =============================================================================
# FILE SYSTEM PATHS
# =============================================================================

# Application data directories
DATA_DIR=data
BACKUP_DIR=backups
UPLOAD_DIR=uploads
LOG_DIR=logs
FLASK_SESSION_DIR=flask_session

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Auto backup settings
AUTO_BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily  # daily, weekly, monthly
MAX_BACKUP_FILES=30

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=True

# Account Lockout
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION=30  # minutes

# CSRF Protection
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Rate Limiting
API_RATE_LIMIT=100/hour
LOGIN_RATE_LIMIT=5/15m  # 5 attempts per 15 minutes
UPLOAD_RATE_LIMIT=10/m   # 10 uploads per minute

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format (overrides default format in config.py)
# LOG_FORMAT='%(asctime)s - %(name)s - %(levelname)s - %(message)s'

# =============================================================================
# AI/CHATBOT CONFIGURATION
# =============================================================================

# OpenAI API Key (for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenRouter API Key (for diverse model access)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# Google AI API Key (for Gemini models)
# Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Default Chatbot Settings
CHATBOT_ENABLED=False
CHATBOT_PROVIDER=openai
CHATBOT_MODEL=gpt-4
CHATBOT_MAX_TOKENS=1000
CHATBOT_TEMPERATURE=0.7

# =============================================================================
# DATABASE CONFIGURATION (Optional - for future use)
# =============================================================================

# PostgreSQL (if migrating from JSON files)
# DATABASE_URL=postgresql://user:pass@localhost:5432/dbname

# SQLite (alternative to JSON files)
# DATABASE_URL=sqlite:///data/app.db

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis (for caching and rate limiting)
# REDIS_URL=redis://localhost:6379/0

# Cache TTL (Time To Live) in seconds
CACHE_DEFAULT_TIMEOUT=3600  # 1 hour
CACHE_DEPARTMENT_TIMEOUT=3600  # 1 hour
CACHE_SUPPLIER_TIMEOUT=3600  # 1 hour
CACHE_MEDICINE_TIMEOUT=3600  # 1 hour

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================

# SMTP Server for email notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=

# Email addresses
MAIL_DEFAULT_SENDER=noreply@example.com
ADMIN_EMAIL=

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Monitoring and Analytics
SENTRY_DSN=  # For error tracking with Sentry

# File Storage
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_S3_REGION=us-east-1

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Pagination Defaults
DEFAULT_PAGE_SIZE=25
MAX_PAGE_SIZE=100

# Database Query Optimization
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Template Cache
TEMPLATE_CACHE_TIMEOUT=3600  # 1 hour

# =============================================================================
# DEVELOPMENT/TESTING SETTINGS
# =============================================================================

# Testing
TESTING=False
TEST_DATABASE_URL=

# Development
DEV_SERVER_RELOAD=False
DEV_SERVER_AUTO_RELOAD=True

# =============================================================================
# PRODUCTION DEPLOYMENT
# =============================================================================

# SSL/TLS Configuration
SSL_DISABLE=False
SSL_CERT_PATH=
SSL_KEY_PATH=

# Reverse Proxy
TRUST_PROXY_HEADERS=False
TRUST_PROXY_IPS=

# Security Headers
SECURITY_HEADERS_ENABLED=True